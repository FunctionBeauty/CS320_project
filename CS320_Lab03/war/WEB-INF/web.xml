<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.AddNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.LoginServlet</servlet-class>
  </servlet>

   <servlet>
    <servlet-name>HomepageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.HomepageServlet</servlet-class>
   </servlet>
  <servlet>
    <servlet-name>CreateAccountServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.CreateAccountServlet</servlet-class>
</servlet>
   <servlet>
    <servlet-name>AccountServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.AccountServlet</servlet-class>
   </servlet>
   <servlet>
    <servlet-name>FavoritesServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.FavoritesServlet</servlet-class>
   </servlet>
   <servlet>
    <servlet-name>WagsRibsServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.WagsRibsServlet</servlet-class>
   </servlet>
 
  
  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.ajax.AddNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab03.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddNumbersServlet</servlet-name>
    <url-pattern>/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>HomepageServlet</servlet-name>
    <url-pattern>/Homepage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateAccountServlet</servlet-name>
    <url-pattern>/CreateAccount</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AccountServlet</servlet-name>
    <url-pattern>/Account</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>FavoritesServlet</servlet-name>
    <url-pattern>/Favorites</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>WagsRibsServlet</servlet-name>
    <url-pattern>/Wag's ribs</url-pattern>
  </servlet-mapping>   


  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <url-pattern>/ajax/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
